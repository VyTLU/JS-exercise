doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Payment
        link(rel="stylesheet" href="../css/style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="icon" href="https://www.neurond.com/favicon.svg?v=e12740d8a74aaae3b8b4e24eeec0bf04" type="image/svg+xml")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com", crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet")

    body 
        include ../pug/header.pug

        main
            //- .progress
            //-     .progress-bar
            //-         .divider 
            //-         .divider-light
            //-         .progress-bar__shop
            //-             .progress-bar__shop__icon x
            //-             .progress-bar__shop__title
            //-                 h4 Shop
            //-         .progress-bar__cart
            //-             .progress-bar__cart__icon y
