            .container 
                .row 
                    .col-12.col-md-10.hh-grayBox.pt45.pb20
                        .justify-content-between.d-flex
                            .order-tracking.completed
                                span.is-complete 
                                p Shop 
                            .order-tracking.completed
                                span.is-complete 
                                p Review 
                            .order-tracking
                                span.is-complete 
                                p Checkout

            .item-container 
                table.item-container__info
                    thead
                        tr.item-container__info-title
                            th &nbsp;
                            th &nbsp;
                            th Product
                            th Price
                            th Quantity
                            th Total
                .item-container__cart.col-4 
                    h3 Cart Totals
                    table.item-container__cart-table
                        tbody 
                            tr.item-container__cart-total
                                th TOTAL
                                td#cartTotAmount 9.99
                    .item-container__cart-checkout
                        a.checkout-button Checkout
        include ../pug/footer.pug

        script(src="../payment.js") 
